<h1 class="text-center">Add Hotel</h1>

<div class="row">
  <div class="mx-auto col-10 col-md-8 col-lg-6">
    <%= form_for @hotel, url: addhotels_path do |f| %>
      <%= render 'shared/errors' %>

      <%= f.label :name %>
      <%= f.text_field :name ,class: 'form-control' %>

      <%= f.label :address %>
      <%= f.text_field :address ,class: 'form-control'%>

      <%= f.label :postalcode %>
      <%= f.text_field :postalcode ,class: 'form-control'%>

      <%= f.label :city %>
      <%= f.text_field :city ,class: 'form-control'%>

      <%= f.label :country %>
      <%= f.text_field :country ,class: 'form-control'%>

      <%= f.label :totalrooms%>
      <%= f.number_field :totalrooms,in: 1..1000 ,class: 'form-control'%>

      <%= f.label :phonenumber %>
      <%= f.text_field :phonenumber,class: 'form-control'%>
      
      <%= f.label :starrating %>
      <%= f.number_field :starrating,in: 0.5..5.0 ,step: 0.5,class: 'form-control'%>
      
      <%= f.label :owner_id %>
      <%= f.number_field :owner_id,in: 1..100 ,class: 'form-control'%>
      <br>
      <%= f.submit "Add Hotel", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
