<div class ="nested-fields">
    <%= f.label :name%>
    <%= f.text_field :name%>

    <%= f.label :age%>
    <%= f.number_field :age,in: 1..100%>

    <%= f.label :gender%>
    <%= f.radio_button :gender,"male"%>
    <%= f.label :gender_male ,"Male" %>
    <%= f.radio_button :gender,"female"%>
    <%= f.label :gender_female ,"Female" %>

    <%= f.label :phonenumber%>
    <%= f.telephone_field :phonenumber%>
                            
    <%= f.label :aadharnumber%>
    <%= f.text_field :aadharnumber%>

    <%= f.hidden_field :hotel_id,value: @booking.hotel_id%>
    <%= f.hidden_field :room_id,value: @booking.room_id%>
    <%= f.hidden_field :booking_id,value: @booking.id%>
    <%= link_to_remove_association 'Remove Guest' ,f %>
    
</div>
                           